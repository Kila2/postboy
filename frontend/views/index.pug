extends layout

block content
    .d-flex.flex-row(style='height:100%')
        #left.d-flex
            .d-flex(style='flex:1;margin-right:2px;cursor:auto')
        #rightcontent.d-flex.flex-column(style='flex:1;')
            .d-flex.flex-column(style='min-height:110px;z-index:1;')
                .d-flex.flex-row(style='flex-basis:50px;')
                    #tab.d-flex.flex-row(style='flex-basis:100px;align-items:flex-end;')
                        button.tab.tab-select(style='margin-left:10px;') New Tab
                        button.tab.tab-normal New Tab
                        button.tab.tab-normal.only-icon
                            i.fas.fa-plus
                        button.tab.tab-normal.only-icon(style='border-right-width:1px')
                            i.fas.fa-ellipsis-h
                    #enviornment.d-flex.flex-row.linecolor
                        #sub-enviornment.d-flex.flex-row(style='flex:1;cursor:auto;')
                            input.d-flex.flex-row(style='flex:1;margin-left:12px;margin-top:10px;margin-bottom:10px;',type='text',placeholder='')
                            #watch.d-flex.flex-row(style='flex-basis:30px')
                                i.fas.fa-eye.d-flex(style='color:#B4B4B4;flex:1;height:100%;padding:6px;')
                            #setting.d-flex.flex-row(style='flex-basis:30px;margin-right:12px')
                                i.fas.fa-cog.d-flex(style='color:#B4B4B4;flex:1;height:100%;padding:5px;')
                #urlbar.d-flex.flex-row
                    button.right-raduis-0(style='width:120px;border-right-width:0px') GET
                        i.fa.fa-angle-down(style='color:#f5f5f5')
                    input(type="text",style='border-radius:0px;flex:1;border-right-width:0px')
                    button.left-raduis-0(style='width:84px;font-weight:normal;color:black;') Params
                    button.button-blue.right-raduis-0(style='border-width:0px;margin-left:10px;width:70px;') Send
                    button.button-blue.left-raduis-0(style='border-width:0px;width:30px;')
                        i.fas.fa-caret-down
                    button.right-raduis-0(style='border-right-width:0px;width:50px;margin-left:10px') Save
                    button.left-raduis-0(style='width:30px;')
                        i.fas.fa-caret-down
            #resultcontent.d-flex.flex-column.position-relative.pre-scrollable(style='height:100%;overflow: hidden !important;max-height:none;')
                .d-flex.flex-row(style='background-color:#fafafa;border-style:solid;border-color:#DBDBDB;border-width:0px;border-bottom-width:1px;min-height:35px;')
                    button.navlightbg-select Authorization
                    button.navlightbg-normal Headers
                    button.navlightbg-normal Body
                    button.navlightbg-normal Pre-request Script
                    button.navlightbg-normal Tests
                .d-flex.flex-row(style='background-color:white;min-height:165px;')
                    .col-sm-3(style='border-right-width:1px;border-style:solid;border-color:#DBDBDB;border-width:0px;border-right-width:1px;')
                       p TYPE
                       button Inherit auth from parent
                       p The authorization header will be automatically generated when you send the request. <a href="#"  target="_blank"> Learn more about authorization </a>
                    .col-sm.d-flex.flex-row(style='align-items:center;justify-content:center;padding-left:25px;padding-right:25px')
                       p(style='color:gray;font-size:13px;text-align:center;') This request is not inheriting any authorization helper at the moment. Save it in a collection to use the parent's authorization helper.
                .d-flex.flex-column(style='background-color:gray;min-height:800px;max-height:none;flex-basis:100%')
                    .d-flex.flex-column.title-item
                        p.m-0 Response
                    .d-flex.flex-column(style='background-color:white;flex:1;')
    script(type='text/javascript', src='/public/index.js')
      